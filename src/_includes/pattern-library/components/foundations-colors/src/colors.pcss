@import "@coopdigital/foundations-vars";

.coop-u-brand { color: var(--color-brand); }
.coop-u-brand-bg { background: var(--color-brand); }

.coop-u-text { color: var(--color-text); }
.coop-u-text-bg { background: var(--color-text); }

.coop-u-white { color: var(--color-white); }
