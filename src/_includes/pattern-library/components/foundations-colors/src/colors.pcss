.coop-u-link-focus { color: var(--color-link--focus); }
.coop-u-link-focus-bg { background: var(--color-link--focus); }
.coop-u-link-focus-outline { outline: 4px solid var(--color-link--focus); }

.coop-u-link-visited,
.coop-u-link-active { color: var(--color-link--visited); }

.coop-u-link-visited-bg,
